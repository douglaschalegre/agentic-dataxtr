# LLM Provider API Keys
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key
GOOGLE_API_KEY=your-google-key
GROQ_API_KEY=your-groq-key

# Ollama (local) - no API key needed
OLLAMA_BASE_URL=http://localhost:11434

# Default provider (anthropic, openai, google, groq, ollama)
DEFAULT_LLM_PROVIDER=anthropic
# Optional: prefer Ollama when available (e.g., gpt-oss:20b)
# DEFAULT_LLM_PROVIDER=ollama

# Antigravity (opencode) OAuth client config
# If omitted, the client_id defaults to the opencode-antigravity-auth plugin id.
ANTIGRAVITY_CLIENT_ID=
ANTIGRAVITY_CLIENT_SECRET=
ANTIGRAVITY_DEFAULT_PROJECT_ID=
ANTIGRAVITY_ENDPOINT=

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
